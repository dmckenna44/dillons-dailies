<%- include("header"); -%>


<div class="text-center my-5 page-title">
  <h1><%= dailyTitle  %></h1>
  <h3><%= dailySubTitle %></h3>
</div>

<div class="container-fluid page-text pb-4">
<div class="card mx-auto my-4" style="width: 60%;">
  <div class="card-body card-background">
    <h1 class="card-title text-center pb-4 pt-3"><%= dishName %></h2>
    <div class="text-center my-4">
      <img class="" src="<%= imageURL %>" style="width: 50%;">
    </div>
    <div class="card-text my-3">
      <h4 class="my-2">Prep Time: <%= time %> minutes</h4>
      <h4 class="my-2">Servings: <%= servings %></h4>
      <h5 class="my-2">Ingredients</h5>
      <ul>
        <% ingredients.forEach(item => { %>
          <li><%= item %></li>
        <% }) %>
      </ul>
      <h5>Instructions</h5>
      <p><%- instructions %></p>
      <p>Source: <a href="<%=source%>"><%= source %></a></p>
    </div>
  </div>


</div>

</div>




<%- include("footer"); -%>
