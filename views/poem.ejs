<%- include("header"); -%>


<div class="text-center my-4 py-4">
  <h1 class="page-title"><%= dailyTitle  %></h1>
  <h3 class="page-subtitle"><%= dailySubTitle %></h3>
</div>

<div class="container-fluid pb-3"> 
<div class="card mx-auto mb-5" style="width: 50%;">
  <div class="card-body card-background">
    <div class="container-fluid py-4">
      <h2 class="card-title page-text"><%= title %></h2>
      <h4 class="card-subtitle mb-4 page-text">by <%= author %></h4>
      <% content.forEach(function(line){ %>
        <p class="card-text page-text"><%=line%></p>
      <% }) %>
    </div>

  </div>

</div>

</div>




<%- include("footer"); -%>
